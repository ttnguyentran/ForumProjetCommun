{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="container">
		<div class="jumbotron">
			<h1>Bienvenue sur le Forum !</h1>
			{{ include('main/_form_search.html.twig') }}
			{% if not app.user %}
				<br>
				<br>
				<h5>Veuillez vous connecter pour créer un nouveau sujet ou laisser des commentaires</h5>
				<p>
					<a href="{{ path('app_register') }}" class="btn btn-primary btn-lg">Créer un compte</a>
					<a href="{{ path('app_login') }}" class="btn btn-default">Se connecter</a>
				</p>
				
			{% elseif app.user %}
				<a href="{{ path('new_thread') }}">Nouvelle publication</a>
			{% endif %}	
		</div>
	</div>

{% endblock %}
